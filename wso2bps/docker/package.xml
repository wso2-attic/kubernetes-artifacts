<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>package</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- docker -->
        <fileSet>
            <directory>${project.basedir}/../</directory>
            <outputDirectory>./${wso2.product.name}/</outputDirectory>
            <includes>
                <include>docker/*</include>
            </includes>
            <excludes>
                <exclude>docker/target</exclude>
                <exclude>**/package.xml</exclude>
                <exclude>**/pom.xml</exclude>
                <exclude>**/*.zip</exclude>
                <exclude>**/*.jar</exclude>
                <exclude>**/*.tar.gz</exclude>
                <exclude>**/.git*</exclude>
            </excludes>
        </fileSet>

        <!-- common -->
        <fileSet>
            <directory>${project.basedir}/../../common/</directory>
            <outputDirectory>./common/</outputDirectory>
            <includes>
                <include>docker/**</include>
                <include>scripts/docker/**</include>
                <include>scripts/base.sh</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.basedir}/../../LICENSE</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>644</fileMode>
        </file>
    </files>
</assembly>
